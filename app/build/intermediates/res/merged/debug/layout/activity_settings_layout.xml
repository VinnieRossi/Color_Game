<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layoutContainingFragmentView"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/settingsScreen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/relativeLayoutContainingScoreText"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Back"
            android:id="@+id/back"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"
            android:layout_marginTop="75dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Theme:"
            android:id="@+id/themeText"
            android:layout_marginTop="80dp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/back"
            android:layout_toLeftOf="@+id/back"
            android:layout_toStartOf="@+id/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sounds:"
            android:id="@+id/soundsText"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_below="@+id/themeText"
            android:layout_marginTop="40dp"
            android:layout_alignRight="@+id/powerUpsText"
            android:layout_alignEnd="@+id/powerUpsText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Power Ups:"
            android:id="@+id/powerUpsText"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/soundsText"
            android:layout_toLeftOf="@+id/back"
            android:layout_toStartOf="@+id/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ON"
            android:id="@+id/soundValue"
            android:textColor="@android:color/white"
            android:layout_alignTop="@+id/soundsText"
            android:layout_alignLeft="@+id/themeValue"
            android:layout_alignStart="@+id/themeValue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ON"
            android:id="@+id/powerUpValue"
            android:layout_alignTop="@+id/powerUpsText"
            android:layout_alignLeft="@+id/soundValue"
            android:layout_alignStart="@+id/soundValue"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Normal"
            android:id="@+id/themeValue"
            android:textColor="@android:color/white"
            android:layout_alignTop="@+id/themeText"
            android:layout_toRightOf="@+id/back"
            android:layout_toEndOf="@+id/back"/>

    </RelativeLayout>
</LinearLayout>