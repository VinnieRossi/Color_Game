<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layoutContainingFragmentView"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/settingsScreen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/relativeLayoutContainingScoreText"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/back"
            android:padding="15dp"
            android:id="@+id/back"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"
            android:layout_marginTop="75dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/theme"
            android:id="@+id/themeText"
            android:layout_marginTop="80dp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/back"
            android:layout_toLeftOf="@+id/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sounds"
            android:id="@+id/soundsText"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_below="@+id/themeText"
            android:layout_marginTop="40dp"
            android:layout_alignRight="@+id/powerUpsText"
            android:layout_alignEnd="@+id/powerUpsText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/powerups"
            android:id="@+id/powerUpsText"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/soundsText"
            android:layout_toLeftOf="@+id/back"
            android:layout_alignLeft="@+id/themeText"
            android:layout_alignStart="@+id/themeText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/normal"
            android:id="@+id/themeValue"
            android:gravity="top|center_horizontal"
            android:textColor="@android:color/white"
            android:layout_alignTop="@+id/themeText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/soundValue"
            android:layout_alignStart="@+id/soundValue"
            android:layout_above="@+id/soundValue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/on"
            android:id="@+id/soundValue"
            android:gravity="top|center_horizontal"
            android:textColor="@android:color/white"
            android:layout_alignTop="@+id/soundsText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/powerUpValue"
            android:layout_alignStart="@+id/powerUpValue"
            android:layout_above="@+id/powerUpValue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/on"
            android:id="@+id/powerUpValue"
            android:gravity="top|center_horizontal"
            android:textColor="@android:color/white"
            android:layout_alignTop="@+id/powerUpsText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/back"
            android:layout_alignStart="@+id/back"
            android:layout_alignBottom="@+id/powerUpsText" />


    </RelativeLayout>
</LinearLayout>